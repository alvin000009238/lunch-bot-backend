{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "cron": [
      {
        "schedule": "13 2 * * *",
        "command": "curl -s -X POST -H \"X-Settlement-Secret: ${SETTLEMENT_SECRET}\" https://${RAILWAY_PUBLIC_DOMAIN}/api/settle-daily-orders"
      }
    ]
  }
}

